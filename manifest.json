{
	"SDKVersion": 2,
	"Author": "Sauce, LLC",
	"CodePath": "app.html",
	"Description": "Control Sauce for Zwift on your StreamDeck",
	"Name": "Sauce for Zwift Controls",
	"Icon": "assets/icon",
	"URL": "https://github.com/SauceLLC/sauce4zwift-streamdeck",
	"Version": "0.0.0",
	"Software": {
		"MinimumVersion": "5.0"
	},
	"OS": [{
        "Platform": "mac",
        "MinimumVersion": "10.11"
    }, {
        "Platform": "windows",
        "MinimumVersion": "10"
    }],
	"Category": "Sauce for Zwift",
	"CategoryIcon": "assets/icon",
	"Actions": [{
        "Icon": "assets/show-hide-windows-action",
        "Name": "Show/Hide Windows",
        "Controllers": ["Keypad"],
        "States": [{
            "Image": "assets/hide-windows",
            "Title": "Hide"
        }, {
            "Image": "assets/show-windows",
            "Title": "Show"
        }],
        "Tooltip": "Show/Hide all overlay Sauce windows",
        "UUID": "llc.sauce.sauce4zwift.show-hide-windows",
        "PropertyInspectorPath": "props.html"
    }, {
        "Icon": "assets/lap-action",
        "Name": "Start Lap",
        "Controllers": ["Keypad"],
        "States": [{
            "Image": "assets/lap",
            "Title": "Laps"
        }],
        "Tooltip": "Start another Sauce lap",
        "UUID": "llc.sauce.sauce4zwift.lap",
        "PropertyInspectorPath": "props.html"
    }, {
        "Icon": "assets/reset-stats-action",
        "Name": "Reset Stats",
        "Controllers": ["Keypad"],
        "States": [{
            "Image": "assets/reset-stats",
            "Title": "Reset"
        }],
        "Tooltip": "Reset Sauce stats",
        "UUID": "llc.sauce.sauce4zwift.reset-stats",
        "PropertyInspectorPath": "props.html"
    }]
}
